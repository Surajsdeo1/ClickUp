<% include ./partials/header.ejs %>
<div class="profile w-lg min-h-screen pt-1 bg-gradient-to-r from-gray-600 to-gray-900">
    <form  id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image" >
    </form>
   <div class="profdets flex flex-col items-center mt-20 ">
    <div class=" relative "> 
        <span id="uploadicon" class=" w-10 h-10 absolute bottom-0 right-0 rounded-full bg-orange-600 flex items-center justify-center">
            <i class=" text-white ri-pencil-fill"></i>
        </span>
        
        <div class="w-40 h-40 bg-red-800 rounded-full overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%=user.profileImage%>" alt="">
        </div>
    </div>
    
    <h1 class="text-3xl font-bold  text-orange-500 mt-2"><%=user.name%></h1>
    <h3 class="mt-2">@<%=user.username%></h3>
    <a class="bg-orange-600 mt-2 px-3 py-1 rounded-lg text-xs font-semibold text-white" href="/edit"> Edit Profile</a>
    <a href="/add" class="px-3 py-1 bg-orange-600 mt-2 rounded-lg text-xs text-white">Post</a>
       
   </div>
   <div class="cards flex px-10 flex-wrap gap-5 mt-3">
    <div class="card">
        <div class="w-52 h-40 bg-red-800 rounded-lg mt-2 overflow-hidden">
            <img class="w-full h-full object-cover"  src="/images/uploads/<%=user?.posts[0]?.image %>" alt="mahadev">
        </div>
        <a href="/show/posts" class="text-lg mt-0.5 font-semibold">your upload</a>
        <h6 class="text-sm font-medium opacity-60"><%=user.posts.length%>pins</h6>

    </div>
   
   
   </div>
</div>
<script>
   
document.querySelector("#uploadicon").addEventListener("click",function(){
    document.querySelector("#uploadform input").click();
})
    
         document.querySelector("#uploadform input").addEventListener("change",function(){
            document.querySelector("#uploadform").submit();
         }) 
   
</script>
